{
  "compilerOptions": {
    "outDir": "./",
    "module": "commonjs",
    "preserveConstEnums": true,
    "sourceMap": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2018",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "example"
  ]
}